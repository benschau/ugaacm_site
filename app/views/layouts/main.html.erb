<!DOCTYPE html>
<html>
    <head>
        <title> UGA@ACM Home </title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>

        <%= content_for :header %>

        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    </head>
    <body>
        <!-- Put header and footer classes into partials --> 
        <header>
            <div class="menu-wrap">
                <div class="menu-sidebar">
                    <div class="nav-heading">
                        <h1 id="nav-title"> <i class="fa fa-chevron-left" aria-hidden="true"></i>ACM @ UGA<i class="fa fa-chevron-right" aria-hidden="true"></i></h1> 
                        <!-- <%= link_to image_tag("acm_logo.png"), "#", id: "logo" %> --> 
                    </div>
                    <ul class="menu list-unstyled">
                        <li><%= link_to "Home",     root_path %></li>
                        <li><%= link_to "About",    about_path %></li>
                        <li><%= link_to "Contact",  contact_path %></li>
                        <li><%= link_to "Officers", officers_path %></li> 
                        <li><%= link_to "Upcoming Events", events_path %></li> 
                    </ul>
                </div> 
            </div>
            <div class="row sitewidebar">
                <div class="navtoggle col-md-1"> 
                    <nav class="navbar">
                        <span class="toggle-button">
                            <div class="menu-bar menu-bar-top"></div>
                            <div class="menu-bar menu-bar-middle"></div>
                            <div class="menu-bar menu-bar-bottom"></div> 
                        </span>
                    </nav>
                </div>
                <div class="siteheader col-md-6 col-md-offset-2">
                    <h3><i class="fa fa-chevron-left" aria-hidden="true"></i>ACM @ UGA<i class="fa fa-chevron-right" aria-hidden="true"></i></h3> 
                </div>
            </div>
        </header>
    
        <%= yield %>
        <br />

        <footer>
            <!-- <div class="container">
                <div class="row">
                <div class="col-sm-6">
                    <p> Link here! </p>
                    <p> Link here! </p> 
                </div>
                <div class="col-sm-6">
                    <p> Link here! </p>
                    <p> Link here! </p>
                </div> 
            </div> --> 
        </footer>
    </body>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> 
</html>
